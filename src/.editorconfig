[*.{cs,vb}]
indent_size = 4
indent_style = space
tab_width = 4

## Styles
# underscored_camel_case
dotnet_naming_style.underscored_camel_case.capitalization = camel_case
dotnet_naming_style.underscored_camel_case.required_prefix = _
# pascal_case
dotnet_naming_style.pascal_case.capitalization = pascal_case

## Groups
# private_fields
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
# public_symbols
dotnet_naming_symbols.public_symbols.applicable_kinds = class,struct,interface,property,method,field,event,delegate
dotnet_naming_symbols.public_symbols.applicable_accessibilities = public

## Rules
# private_fields_underscored_camel_case
dotnet_naming_rule.private_fields_underscored_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_underscored_camel_case.style = underscored_camel_case
dotnet_naming_rule.private_fields_underscored_camel_case.severity = error
# public_symbols_pascal_case
dotnet_naming_rule.public_symbols_pascal_case.symbols = public_symbols
dotnet_naming_rule.public_symbols_pascal_case.style = pascal_case
dotnet_naming_rule.public_symbols_pascal_case.severity = error